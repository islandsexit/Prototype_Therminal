            android:layout_width="170dp"
            android:layout_height="85dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="45dp"
            android:text="X"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/button_0"
