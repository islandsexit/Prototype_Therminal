<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Photo">

    <TextureView

        android:id="@+id/camera_viev"
        android:layout_width="340dp"
        android:layout_height="455dp"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="455dp"
        android:layout_height="340dp"
        android:src="@drawable/face5"
        app:layout_constraintBottom_toBottomOf="@+id/camera_viev"
        app:layout_constraintEnd_toEndOf="@+id/camera_viev"
        app:layout_constraintStart_toStartOf="@+id/camera_viev"

        app:layout_constraintTop_toTopOf="@+id/camera_viev" />

    <Button
        android:id="@+id/btn_take_photo"
        style="@style/Widget.Material3.Button"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:text="Фото"
        android:textSize="20sp"
        android:backgroundTint="@color/orange"

        app:icon="@android:drawable/ic_menu_camera"
        app:iconPadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_viev"
        app:layout_constraintVertical_bias="0.28" />

    <TextView
        android:id="@+id/TV_RESULT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_take_photo"
        app:layout_constraintVertical_bias="0.411" />

    <Button
        android:id="@+id/btn_home"
        style="@style/Widget.Material3.Button"
        android:backgroundTint="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Домой"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_take_photo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/hint"
        android:layout_width="455dp"
        android:layout_height="340dp"
        android:background="#bdbfbe"
        android:padding="115dp"
        android:text="Пожалуйста смотрите в камеру\n Ваше лицо должно полностью находиться в кадре\n В кадре должно присутствовать одно лицо"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appCompatImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>