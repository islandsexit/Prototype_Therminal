<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prototype_Therminal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="PurpleButton" parent="@style/Widget.Material3.Button">
        <item name="colorButtonNormal">#EF7D00</item>
        <item name="colorControlHighlight">#EF7D00</item>
        <item name="cornerRadius">0dp</item>
    </style>
    <style name="mybuttonstyle" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="invite_code_style" parent="ThemeOverlay.Material3.MaterialTimePicker.Display.TextInputEditText">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">92dp</item>
        <item name="android:strokeWidth">11</item>
        <item name="android:strokeColor">#C7C7C7</item>

    </style>

</resources>